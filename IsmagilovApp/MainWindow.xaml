<Window x:Class="IsmagilovApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsmagilovApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Background="#bae3e8"></Grid>
        <Image Source="resources/logo.png" HorizontalAlignment="Left"/>
        <TextBlock HorizontalAlignment="Center" Text="Header" FontSize="30" VerticalAlignment="Center"/>
        <Grid Grid.Row="2" Background="#445c93"></Grid>
        <Frame Grid.Row="1"></Frame>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>

        <Button Content="Back" Name="BtnBack" FontSize="20" HorizontalAlignment="Right" Click="BtnBack_Click" Width="175" Height="30"/>

    </Grid>
</Window>
